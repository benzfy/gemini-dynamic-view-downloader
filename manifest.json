{
  "manifest_version": 3,
  "name": "Gemini Dynamic View Downloader",
  "version": "1.0.0",
  "description": "一键保存 Gemini 动态视图为 HTML 文件",
  "permissions": [
    "contextMenus",
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>", "file:///*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

